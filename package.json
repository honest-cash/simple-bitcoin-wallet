    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "bitbox-light": "^2.3.6",
    "bitcoinfiles": "^0.3.8",
    "css-loader": "^1.0.0",
    "eslint": "^5.3.0",
    "express": "^4.16.3",
    "gulp": "^3.9.1",
    "gulp-babel": "^7.0.1",
    "gulp-clean": "^0.4.0",
